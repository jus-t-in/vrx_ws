<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="wam-v-components">
  <xacro:macro name="yaml_components">
    <!-- === wamv_camera === -->
      <xacro:wamv_camera name="front_left_camera" visualize="False" x="0.75" y="0.1" z="1.5" R="0.0" P="0.0" Y="0.5" post_Y="0.0" />
      <xacro:wamv_camera name="front_right_camera" visualize="False" x="0.75" y="-0.1" z="1.5" R="0.0" P="0.0" Y="-0.5" post_Y="0.0" />

    <!-- === wamv_imu === -->
      <xacro:wamv_imu name="imu_wamv" x="0.3" y="-0.2" z="1.3" R="0.0" P="0.0" Y="0.0" />

    <!-- === lidar === -->
      <xacro:lidar name="lidar_wamv" type="16_beam" x="0.7" y="0.0" z="2.0" R="0.0" P="0.0" Y="0.0" post_Y="0.0" />

  </xacro:macro>
</robot>